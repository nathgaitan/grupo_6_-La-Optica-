<!DOCTYPE html>
<html lang="es">

<%- include('../partials/head') %>

    <body>
        <%- include('../partials/header') %>




            <main class="edit">
                <section class="formulario">

                    <h3>Carga de anteojos:</h3>

                    <form action="/admin/crear-producto" method="POST">

                        <section class="imagen">



                            <div class='anteojo'>
                                <input type="file" name="image">
                            </div>





                            




                        </section>






                        <div class="container">

                            <label for="name">Nombre del producto</label>
                            <input type="text" id="name" name="name" >



                        </div>

                        <div class="container">

                            <label for="marca">Marca del producto</label>
                            <input type="text" id="marca" name="Marca" >



                        </div>

                        <div class="container">

                            <label for="price">Precio del producto</label>
                            <input type="number" id="price" name="price" >


                        </div>
                        <div class="container">

                            <label for="discount">Descuento del producto</label>
                            <input type="number" id="discount" name="discount" >



                        </div>
                        <div class="container">

                            <label for="color">color del producto</label>
                            <input type="text" id="color" name="color" >



                        </div>

                        <div class="container">
                            <div>
                                <label for="detail">detalle del producto</label>
                            </div>
                            <div>
                                <textarea name="detail" id="" cols="30" rows="10"></textarea>
                            </div>

                        </div>



                        <div class="container">

                            <label for="Codigo">Codigo del producto</label>
                            <input type="number" id="Codigo" name="Codigo">



                        </div>
                        <div class="container">

                            <label for="lens">Tipo de lente del producto</label>
                            <select class="lens" name="lens">
                                <option value="">Seleccione Uno …</option>
                                <option value="de sol">de sol</option>
                                <option value="fotocromaticas">fotocromaticas</option>
                                <option value="blue ligth">blue ligth</option>
                                <option value="transition">transition</option>
                            </select>



                        </div>

                        <div class="container">
                            <div class="container">

                                <label for="frame">Tipo de marco del producto</label>
                                
                                <select class="frame" name="frame">

                                    <option value="">Seleccione Uno …</option>
                                    <option value="metalico" >metalico</option>
                                    <option value="acrilico" >acrilico</option>
                                    <option value="madera" >madera</option>
                                    <option value="flexibles" >flexibles</option>
                                </select>



                            </div>
                            <div class="container">
                                <div class="container">
                                    <label>categoria
                                        <select class="category" name="category">
                                            <option value="anteojos" >Anteojos</option>
                                         
                                        </select>
                                    </label>



                                </div>










                                <div class="cargar">
                                    <input type="submit" value="Cargar">
                                </div>
                               
                                




                    </form>

                </section>

            </main>




            <%- include('../partials/footer') %>

    </body>

</html>