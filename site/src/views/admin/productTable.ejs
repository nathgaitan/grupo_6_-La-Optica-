<!DOCTYPE html>
<html lang="es">
<%- include('../partials/head') %>

    <body class="tabla">
        <main>

            <%- include('../partials/headerAdmin') %>

            <section class="table-responsive">
                <table>
                    <thead>
                        <tr class="">
                            <th class="static">#</th>
                            <th class="first-col">Descripci√≥n</th>
                            <th>Lente</th>
                            <th>Categoria</th>
                            <th>Precio de lista</th>
                            <th>Precio final</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody class="">

                        <% products.forEach((product, index)=> { %>
                            <tr>
                                <td class="static">
                                   <%= index + 1 %>
                                </td>
                                <td class="first-col">
                                    <article>
                                        <figure class="left">
                                            <img src="images/products/<%= product.images[0] ? product.images[0].file : "producto-sin-foto.png" %>"
                                                alt="<%= product.name %> <%= product.mark.name %> <%= product.category.name %>">
                                        </figure>
                                        <div class="right">
                                            <p>
                                                <%= product.name %>
                                            </p>
                                            <small>
                                                
                                                <%= product.mark.name %>|
                                                 <% if (product.code != null) { %>
                                                    <%= product.code %> |
                                                <% } %>
                                                <%= product.frame.name != null ? capitalize(product.frame.name) : capitalize(product.category.name) %>
                                                
                                                
                                            </small>
                                            <p>
                                                <%= product.detail %>
                                            </p>
                                        </div>
                                    </article>
                                </td>
                                <td class="">
                                    <%= product.lens.name %>
                                </td>
                                <td class="">
                                    <%= capitalize(product.category.name) %>
                                </td>
                                <td class="cash">
                                    <%= toThousand(product.price) %>
                                </td>
                                <td class="cash price-final">
                                    <%= product.discount != 0 ? toThousand(priceFinal(product.price, product.discount).toFixed(0)) : product.price %>
                                </td>
                                <td class="acc-but">
                                    <div>
                                        <% if (product.category.name==="anteojos" ) { %>
                                            <a href="/admin/editar-producto/<%= product.id %>" class="editador"><i
                                                    class="fas fa-edit"></i></a>
                                            <%}else if (product.category.name==="lentes de contacto" ) { %>
                                                <a href="/admin/edit-contactLentes/<%= product.id %>" class="editador"><i
                                                        class="fas fa-edit"></i></a>
                                                <% }else{ %>
                                                    <a href="/admin/edit-solucion-oftalmologica/<%= product.id %>"
                                                        class="editador"><i class="fas fa-edit"></i></a>
                                                    <% } %>
                                                        <a href="/admin/productDetail/<%= product.id %>" class="detail"><i
                                                                class="fas fa-eye"></i></a>
                                                        <form
                                                            action="/admin/delete/<%= product.id %>?_method=DELETE "
                                                            method="POST">
                                                            <button type="submit" class="borrar">
                                                                    <i class="fas fa-trash-alt"></i>
                                                            </button>
                                                        </form>
                                    </div>

                                </td>
                            </tr>
                            <% }) %>

                    </tbody>
                </table>

            </section>
        </main>

    </body>

</html>