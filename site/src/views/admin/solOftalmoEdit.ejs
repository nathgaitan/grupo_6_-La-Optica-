<!DOCTYPE html>
<html lang="es">

<%- include('../partials/head') %> 
<body>
<%- include('../partials/header') %> 
    <main class="edit">
        <div class="formulario">
            <h3>Editando: <%= product.name %> de la categoría <%= product.category %></h3>
            <form action="/admin/edit-solucion-oftalmologica/<%= product.id %>?_method=PUT" method="post" enctype="multipart/form-data">
                <div class="container">
                    <label for="name">Nombre del producto</label>
                    <input type="text" name="name" value="<%= product.name%>" required>
                </div>
                <div class="container">
                    <label for="marca">Marca del producto</label>
                    <input type="text" name="marca" value="<%= product.marca%>" required>
                </div>
                <div class="container">
                    <label for="price">Código del producto</label>
                    <input type="number" name="codigo" value="<%= product.codigo%>" required>
                </div>
                <div class="container">
                    <label for="price">Precio del producto</label>
                    <input type="number" name="price" value="<%= product.price%>" required>
                </div>
                <div class="container">
                    <label for="discount">Descuento del producto</label>
                    <input type="number" name="discount" value="<%= product.discount%>" required>
                </div>
                <section class="imagen">
                    <div class="anteojo">
                        <input type="file" name="image" id="image" required>
                    </div>
                </section>
                    <div class="container">
                        <label for="lens">Tipo de lente del producto</label>
                        <select class="lens" name="lens">
                            <option value="" hidden disabled>Seleccione Uno …</option>
                            <option value="de sol" <%= product.lens ? 'selected' : null %>>de sol</option>
                            <option value="fotocromaticas" <%= product.lens ? 'selected' : null %>>fotocromaticas</option>
                            <option value="blue ligth" <%= product.lens ? 'selected' : null %>>blue ligth</option>
                            <option value="transition" <%= product.lens ? 'selected' : null %>>transition</option>
                        </select>
                    </div>
                <div class="container">
                    <textarea name="detail" id="detail" cols="30" rows="10" ><%= product.detail %></textarea>
                </div>
                <div class="container">
                    <input type="submit" value="Cargar">
                </div>
            </form>
        </div>
    </main>
<%- include('../partials/footer') %> 
</body>
</html>