<!DOCTYPE html>
<html lang="es">
    <%- include('../partials/head') %>
<body class="login">
    <%- include('../partials/header') %> 

    <main>
        <article class="todo">
            <form method="POST" id="form-login">
                <div class="inicio1">
                    <h2>Iniciar Sesión</h2>
                </div>
                <div class="log-img3">
                    <img class="img3" src="/images/login03.png" alt="">
                </div>
                <div class="todo2">
                 <div class="log-img">
                    <img class="img1" src="/images/login01.jpg" alt="">
                </div>
                <div class="log-img2">
                    <img class="img2" src="/images/login02.jpg" alt="">
                </div>
                <div class="inicio2">
                    <h2>Iniciar Sesión</h2>
                </div>
                <div class="boxes">
                    <div class="log-box">
                        <label for="email">E-mail</label>
                        <input type="email" name="email" id="email" placeholder="Ingresá tu email">
                        <p id="email-msg"></p>
                    </div>
                    <div class="log-box">
                        <label for="password">Contraseña</label>
                        <input type="password" name="password" id="password" placeholder="Ingresá tu contraseña">
                        <p id="password-msg"></p>
                    </div>
                    <div class="radio-box">
                        <div>
                            <input class="recor-box" type="checkbox" name="recordar" id="recordar" value="recordar">
                            <label class="recor-tex" for="recordar">Recordar contraseña</label>
                        </div>
                        <a class="recup-box" href="recuperarcontraseña">¿Olvidaste tu contraseña?</a>
                    </div>
                    <div id="error">
                        <span id="error-msg"><%= locals.errors && errors.email ? errors.email.msg : null %></span>
                    </div>
                    <div class="but-box">
                        <button type="submit">Entrar</button>
                    </div> 
                    <div class="google-box">
                        <a href=""><img src="/images/reg google.png" alt=""></a>
                    </div>
                </div>
                <div class="accede">
                    <h4>¿No te has registrado?</h4>
                    <a class="registrate" href="/users/register">Registrate.</a>
                </div>
            </div>
    
            
            </form>
        </article>
    </main>

    
        <%- include('../partials/footer') %> 

    <%- include('../partials/scripts') %> 
    
</body>
</html>
