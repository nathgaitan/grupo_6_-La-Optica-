<!DOCTYPE html>
<html lang="es">
<%- include('../partials/head') %> 
<body class="home list">
    <%- include('../partials/header') %> 
    <main>
        <%- include('../components/glidejsStart', {clase : 'banner' }) %>
            <% banners.forEach(banner=> { %>
                <div class="carousel__item" style="background-image: url('/images/banner/<%= banner.file %>');">
                </div>
            <% }) %>
        <%- include('../components/glidejsEnd', {clase : 'banner' , dots : 'b-dots' }) %>
        <section class="contenedora">
            
            <section class="productos">
                <% products.forEach(product=> { %>
                    <article>
                        <a href="/products/detalle-de-producto/<%= product.id %>">
                            <figure class="anteojos">
                                <img class="img-anteojos" src="/images/products/<%= product.images[0] ? product.images[0].file : 'producto-sin-foto.png' %>"
                                alt="<%= product.name, product.mark.name %>">
                            </figure>
            
                        <div class="box-detalle">
                            <p class="title">
                                    <%= product.name %>
                            </p>
                            <% if (product.discount> 0) { %>
                                <p class="discount">
                                    <%= toThousand(product.price) %>
                                </p>
                                <p class="price">
                                    <%= toThousand(priceFinal(product.price,product.discount).toFixed(0))%>
                                </p>
                            <% } else { %>
                                <p class="discount"></p>
                                <p class="price">
                                    <%= toThousand(product.price.toFixed(0)) %>
                                </p>
                            <% } %>
                        </div>
                        </a>
                        <div class="check-like">
                            <input type="checkbox" id="<%= product.id %>">
                            <label for="<%= product.id %>"><i class="far fa-heart"></i></label>
                            <div class="check-buy">
                                <input type="checkbox" class="buy" id="buy<%= product.id %>">
                                <label for="buy<%= product.id %>"><i class="fas fa-shopping-basket"></i></label>
                                <label class="plus" for="buy"><i class="fas fa-plus"></i></label>
                            </div>
                        </div>
                    </article>
                <% }) %>
            </section>
            <section class="category">
                    <ul><a href="">Colecci√≥n</a>
                        <% frames.forEach( frame => { %>
                            <li><a href=""><%= frame.name %></a></li>
                        <% }) %>
                    </ul>
                    <ul><a href="">Marcas</a>
                        <% marks.forEach( mark => { %>
                            <li><a href=""><%= mark.name %></a></li>
                        <% }) %>
                    </ul>
                    <ul><a href="">Lentes</a>
                        <% lenses.forEach( lens => { %>
                            <li><a href=""><%= lens.name %></a></li>
                        <% }) %>
                    </ul>
                    <ul><a href="">Color</a>
                        <% colors.forEach( color => { %>
                            <li><a href=""><%= color.name %></a></li>
                        <% }) %>
                    </ul>
            </section>
        
        <section class="filter">
            <form action="/products" method="post">
                <select name="filtro" id="filtro">
                    <option value="none" selected disabled hidden> Filtro </option>
                    <option value="az"> Nombre : descendente </option>
                    <option value="za"> Nombre: ascendente </option>
                    <option value="pmen"> Precio : mayor a menor </option>
                    <option value="pmay"> Precio : menor a mayor </option>
                    <option value="masc"> Marca : ascendente </option>
                    <option value="mdesc"> Marca : descendente </option>
                </select>
                <input type="submit" value="Filtrar">
            </form>
        </section>
    </section>
        <section class="whatsapp">
            <div class="contenedor">
                <nav>
                    <input type="checkbox" id="whatsapp">
                    <label for="whatsapp"><i class="fab fa-whatsapp"></i></label>
                    <ul>
                        <li><a href="">Escribinos por Whats App!</a></li>
                    </ul>
                </nav>
            </div>
        </section>
    </main>
    <%- include('../partials/footer') %>
    <%- include('../partials/scripts') %>
</body>
</html>