<!DOCTYPE html>
<html lang="es">
<%- include('./partials/head') %>

<body class="home">
    <%- include('./partials/header') %>

    <main>
        <%- include('./components/glidejsStart', {clase : 'banner'}) %>
        <% banners.forEach(banner => { %>
        <div class="carousel__item" style="background-image: url('/images/banner/<%= banner.file %>');">
        </div>
        <% }) %>
        <%- include('./components/glidejsEnd', {clase : 'banner', dots : 'b-dots'}) %>

        <%- include('./components/glidejsStart', {clase : 'marcas'}) %>
        <% marcas.forEach(marca=> { %>
        <div class="carousel__item" style="background-image: url('/images/marcas/<%= marca %>')">
        </div>
        <% }) %>
        <%- include('./components/glidejsEnd', {clase : 'marcas', dots : 'm-dots'}) %>

        <section class="buscador">
            <form class="" action="/search">
                <input class="" type="search" placeholder="Buscar artículos" name="busqueda">
                <button class="" type="submit"><i class="fas fa-search" aria-hidden="true"></i></button>
            </form>
        </section>

        <section class="productos">
            <% products.forEach(product=> { %>
            <article>
                <a href="/products/detalle-de-producto/<%= product.id %>">
                    <figure class="anteojos text-center">
                        <img class="img-anteojos"
                            src="/images/products/<%= product.images[0] ? product.images[0].file : 'producto-sin-foto.png' %>"
                            alt="<%= product.name, product.mark.name %>">
                        <small>

                            <%= product.mark.name %> |
                            <%= product.frame.name != null ? capitalize(product.frame.name) : capitalize(product.category.name) %>

                        </small>
                    </figure>
                    <div class="box-detalle">
                        <p class="title">
                            <%= product.name %>
                        </p>
                        <% if (product.discount> 0) { %>
                        <p class="discount">
                            <%= toThousand(product.price) %>
                        </p>
                        <p class="price">
                            <%= toThousand(priceFinal(product.price,product.discount).toFixed(0))%>
                        </p>
                        <% } else { %>
                        <p class="discount"></p>
                        <p class="price">
                            <%= toThousand(product.price) %>
                        </p>
                        <% } %>
                    </div>
                </a>
                <div class="check-like">
                    <input type="checkbox" id="<%= product.id %>">
                    <label for="<%= product.id %>"><i class="far fa-heart"></i></label>
                    <div class="check-buy">
                        <input type="checkbox" class="buy" id="buy<%= product.id %>">
                        <label for="buy<%= product.id %>" class="buy" onClick="addItem(event,'<%=product.id%>');"><i
                                class="fas fa-shopping-basket"></i></label>
                        <label for="buy<%= product.id %>" class="plus"
                            onClick="removeProduct(event,'<%=product.id%>');"><i class="fas fa-shopping-basket"></i><i
                                class="fas fa-plus"></i></label>
                    </div>
                </div>
            </article>
            <% }) %>
        </section>

        <section class="coleccion">
            <div class="contenedor">
                <figure class="uno">
                    <img src="/images/coleccion/anteojo-acetato01.png" alt="">
                    <a href="/search?busqueda=acetato">COLECCIÓN ACETATO</a>
                </figure>
            </div>
            <div class="contenedor">
                <figure class="tres">
                    <img src="/images/coleccion/lente-plastico.jpg" alt="">
                    <a href="/search?busqueda=plástico">COLECCIÓN PLÁSTICO</a>
                </figure>
            </div>
            <div class="contenedor">
                <figure class="dos">
                    <img class="lente-coleccion" src="/images/coleccion/lente metalico(1).jpg" alt="">
                    <a href="/search?busqueda=metal">COLECCIÓN METÁLICO</a>
                </figure>
            </div>
        </section>

        <section class="container-galeria">
            <div class="icono-instagram">
                <div class="background-icono">
                    <i class="fab fa-instagram"></i>
                </div>
                <h4>@LaOptica | Instagram</h4>
            </div>
            <section class="galeria-redes">
                <section id="galery" class="post">
                </section>
                <section id="glider-ig" class="glider-contain">
                    <div id="g-ig" class="glider">
                    </div>
                    <button aria-label="Previous" class="glider-prev">«</button>
                    <button aria-label="Next" class="glider-next">»</button>
                    <div role="tablist" class="dots"></div>
                </section>
            </section>
        </section>

        <section class="whatsapp">
            <div class="contenedor">
                <nav>
                    <input type="checkbox" id="whatsapp">
                    <label for="whatsapp"><i class="fab fa-whatsapp"></i></label>
                    <ul>
                        <li><a href="">Escribinos por Whats App!</a></li>
                    </ul>
                </nav>
            </div>
        </section>
    </main>

    <%- include('./partials/footer') %>
    <script src="/js/mediaCarrousel.js"></script>
    <%- include('./partials/scripts') %>

</body>

</html>